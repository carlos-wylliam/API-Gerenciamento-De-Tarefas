model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  taks Task[] // Um usuário pode ter várias tarefas
}

model Task {
  id Int @id @default(autoincrement())
  title String
  description String?
  done Boolean @default(false)
  createdAt DateTime @default(now())
  userId Int
  User  User @relation(fields: [userId], references: [id])
}

